<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/blue_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:id="@+id/white_container"
        android:background="@drawable/rounded_container"
        android:layout_width="343dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pink_container"
            android:layout_width="78dp"
            android:layout_height="24dp"
            android:background="@drawable/rounded_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/pink">

            <TextView
                android:layout_width="78dp"
                android:text="Category"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/pink_container"
                app:layout_constraintEnd_toEndOf="@id/pink_container"
                app:layout_constraintStart_toStartOf="@id/pink_container"
                android:textAlignment="center"
                android:layout_height="24dp">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="50dp"
            android:background="@drawable/pink_right_top"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_height="36dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:text="0"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_centerHorizontal="true">

        </TextView>

        <ImageView
            android:layout_width="296dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:src="@drawable/options"
            android:layout_height="36dp">

        </ImageView>

    </RelativeLayout>

    <Button
        android:id="@+id/purple_button"
        android:layout_width="350dp"
        android:layout_height="62dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="28dp"
        android:text="Next"
        android:background="@drawable/gradient_background"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/white_container">

    </Button>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="158dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_spinner"
        app:layout_constraintTop_toBottomOf="@id/purple_button"
        android:layout_marginTop="50dp" />





</androidx.constraintlayout.widget.ConstraintLayout>
